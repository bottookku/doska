<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Интервал выхода в минутах"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView37"
                android:layout_weight="1"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/editText20"
                android:layout_weight="1"
                android:hint="от 1 до 10"
                android:inputType="number"
                android:numeric="integer" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Час начала рабочего дня"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView32"
                android:layout_weight="1"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText17"
                android:layout_weight="1"
                android:hint="от 1 до 24"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Час конца рабочего дня"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView33"
                android:layout_weight="1"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText18"
                android:layout_weight="1"
                android:hint="от 1 до 24"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Величина случайного разброса интервала в минутах"
                android:layout_height="match_parent"
                android:id="@+id/textView35"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText19"
                android:layout_weight="1"
                android:hint="от 1 до 1000"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="применить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button18"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button19" />
</RelativeLayout>
